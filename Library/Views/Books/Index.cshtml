@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2 class="BasicColor">Books List</h2>

<p>
    @Html.ActionLink("Create New", "Create",routeValues: null,htmlAttributes: new {@class = "BasicLink"})
</p>
<table class="table">
    <tr style=" color: black; background-color: #5fb3e9;">
        <th>
            @Html.DisplayNameFor(model => model.Author.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style ="color:#E6E6E6; background-color:#1D1F21">
        <td>
            @Html.DisplayFor(modelItem => item.Author.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Classification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.ISBN }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil BasicLink" }) |
            @Html.ActionLink(" ", "Details", new { id = item.ISBN }, htmlAttributes: new { @class = "glyphicon glyphicon-zoom-in BasicLink" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.ISBN }, htmlAttributes: new { @class = "glyphicon glyphicon-trash BasicLink" })
        </td>
    </tr>
}

</table>

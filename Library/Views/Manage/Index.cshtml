@model Library.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2 class="BasicColor">@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4 class="BasicColor">Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="BasicColor">Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword", routeValues: null, htmlAttributes: new { @class = "BasicLink" })
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword", routeValues: null, htmlAttributes: new { @class = "BasicLink" })
            }
            ]
        </dd>
        <dt class="BasicColor">External Logins:</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink("Manage", "ManageLogins", routeValues: null, htmlAttributes: new { @class = "BasicLink" }) ]
        </dd>
       
    </dl>
</div>

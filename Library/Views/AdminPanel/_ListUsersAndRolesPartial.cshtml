
@model Library.Models.ApplicationListUsersAndRoles

<h2 class="BasicColor"> List of Users</h2>

<div>@Html.ActionLink("Register New User", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "BasicLink" })</div>
<div class="table-responsive">
    <table class="table UserAndRolesTable">
        <tr>
            <th>
                Username
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Personal Id
            </th>

            <th>
                Phone Number
            </th>

            <th>
                Roles
            </th>
        </tr>

        @foreach (var element in Model.UserAndRoles)
        {
            <tr>

                <td>
                    @element.User.UserName
                </td>

                <td>
                    @element.User.FirstName
                </td>

                <td>
                    @element.User.LastName
                </td>

                <td>
                    @element.User.PersonId
                </td>

                <td>
                    @element.User.PhoneNumber
                </td>
                <td>
                    @foreach (var Role in element.Roles)
                    {
                        @Role
                    }
                </td>
                <td></td>
            </tr>
        }

    </table>
</div>
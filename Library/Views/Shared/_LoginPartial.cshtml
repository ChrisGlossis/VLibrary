@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right",}))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        
        <li>@Html.ActionLink(" Admin Panel", "Index", "AdminPanel", routeValues: null, htmlAttributes: new { @class = "glyphicon glyphicon-list-alt" })</li>
        <li>
            @Html.ActionLink(" Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "glyphicon glyphicon-user"})
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class = "glyphicon glyphicon-log-out"} ></span> Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <<li>@Html.ActionLink(" Admin Panel", "Index", "AdminPanel", routeValues: null, htmlAttributes: new { @class = "glyphicon glyphicon-list-alt" })</li>
        <li>@Html.ActionLink(" Register", "Register", "Account", routeValues: null, htmlAttributes: new {@class = "glyphicon glyphicon-user",id = "registerLink" })</li>
        <li>@Html.ActionLink(" Log in", "Login", "Account", routeValues: null, htmlAttributes: new {@class="glyphicon glyphicon-log-in", id = "loginLink" })</li>
    </ul>
}
